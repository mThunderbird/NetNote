<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>

<VBox fx:id="root" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: -bg-primary;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.BaseCtrl">
    <children>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="1000.0" style="-fx-background-color: -bg-secondary;">
         <children>
            <ChoiceBox fx:id="cbCollectionFilter" prefHeight="25.0" prefWidth="200.0" style="-fx-background-color: -bg-primary; -fx-border-color: -border; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-text-inner-color: -text-primary;">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin></ChoiceBox>
            <Button fx:id="collectManage" mnemonicParsing="false" onAction="#openCollectionManagement" style="-fx-background-color: -accent-blue; -fx-border-color: -border; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-background-insets: 1px; -fx-text-fill: -text-secondary;" text="Manage collections" />
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" style="-fx-spacing: 10px;" HBox.hgrow="ALWAYS">
               <children>
                   <ComboBox fx:id="languageSelector" prefHeight="25.0" prefWidth="150.0" style="-fx-background-color: -bg-primary; -fx-border-color: -border; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-text-fill: -text-primary;">
                     <padding>
                        <Insets right="10.0" />
                     </padding>
                  </ComboBox>
               </children>
               <padding>
                  <Insets right="10.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="1000.0" style="-fx-background-color: -bg-secondary;">
         <children>
            <TextField fx:id="tfSearchBar" prefHeight="25.0" prefWidth="162.0" promptText="Search by title" style="-fx-background-color: -bg-primary; -fx-border-color: -border; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-text-fill: -text-primary;" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TextField>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </HBox>

                    <!-- Split Pane (Main Area) -->
        <SplitPane fx:id="baseSplitPane" dividerPositions="0.25" style="-fx-background-color: -bg-primary;" VBox.vgrow="ALWAYS">
            <items>
            <VBox alignment="CENTER" prefWidth="200.0">
               <children>
                  <VBox fx:id="vbNoteListMenu" alignment="CENTER" fillWidth="false" prefHeight="45.0" prefWidth="297.0" style="-fx-background-color: -bg-primary;">
                     <children>
                        <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Button fx:id="addNote" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#addNoteBtnClick" style="-fx-background-color: -accent-blue; -fx-background-radius: 5px; -fx-border-color: -border; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-background-insets: 1px; -fx-text-fill: -text-secondary;" text="Add note" HBox.hgrow="ALWAYS" />
                              <Button fx:id="refreshButton" alignment="CENTER" contentDisplay="CENTER" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#refreshBtnClick" style="-fx-background-color: -accent-blue; -fx-background-radius: 5px; -fx-border-color: -border; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-background-insets: 1px; -fx-text-fill: -text-secondary;" text="Refresh" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding></VBox>
                      <!-- Left Sidebar / Scrollable Pane -->
                      <ScrollPane fitToHeight="true" fitToWidth="true" focusTraversable="false" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: -bg-primary; -fx-border-color: transparent;" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox fx:id="vbNoteList" spacing="5.0" style="-fx-background-color: -bg-primary; -fx-border-color: transparent;">
                           <padding>
                              <Insets left="5.0" right="5.0" />
                           </padding>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefWidth="100.0" style="-fx-background-color: -bg-primary;">
               <children>
                  <HBox alignment="CENTER" prefHeight="45.0" style="-fx-spacing: 20px;">
                     <children>
                        <TextField fx:id="tfCurrentNoteTitle" prefWidth="300.0" promptText="Enter your note title here">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </TextField>
                        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: -bg-primary;" HBox.hgrow="ALWAYS">
                           <children>
                              <Label fx:id="lMoveCollection" alignment="CENTER" contentDisplay="CENTER" prefHeight="25.0" style="-fx-background-insets: 1px; -fx-text-fill: -text-secondary;" text="Move to collection:" textAlignment="CENTER">
                                 <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </padding>
                              </Label>
                              <ChoiceBox fx:id="cbNoteMoveCollection" prefHeight="25.0" prefWidth="200.0" style="-fx-background-color: -bg-primary; -fx-border-color: -border; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-text-inner-color: -text-primary;">
                                 <HBox.margin>
                                    <Insets right="5.0" />
                                 </HBox.margin>
                              </ChoiceBox>
                           </children>
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                     </padding>
                  </HBox>
                  <SplitPane dividerPositions="0.5" prefHeight="160.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <items>
            
                                                          <!-- Main Text Area -->
                            <TextArea fx:id="taCurrentNote" promptText="Enter your notes here" style="-fx-control-inner-background: -bg-secondary; -fx-background-color: -bg-secondary;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextArea>
            
                                                    <!-- Web View for Document Preview -->
                            <WebView fx:id="wvNoteRender" prefHeight="-1.0" prefWidth="-1.0" style="-fx-background-color: -bg-primary;" />
                    </items>
                  </SplitPane>
               </children>
            </VBox>
            </items>
        </SplitPane>
      <VBox fx:id="hbErrorMsgPane" alignment="CENTER" prefHeight="20.0" prefWidth="100.0" style="-fx-background-color: -bg-secondary; -fx-spacing: 5px; -fx-padding: 5px;" />
    </children>
</VBox>
